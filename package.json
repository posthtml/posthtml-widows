{
  "name": "posthtml-widows",
  "description": "PostHTML plugin for preventing widow words in strings.",
  "version": "1.0.2",
  "license": "MIT",
  "author": "PostHTML (https://github.com/cossssmin)",
  "bugs": "https://github.com/posthtml/posthtml-widows/issues",
  "homepage": "https://github.com/posthtml/posthtml-widows",
  "repository": "posthtml/posthtml-widows",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vitest",
    "release": "npx np",
    "build": "unbuild",
    "prepack": "unbuild",
    "lint": "biome lint ./lib ./test",
    "pretest": "npm run lint",
    "test": "vitest run --coverage"
  },
  "keywords": [
    "widows",
    "string",
    "typography",
    "paragraph",
    "html",
    "text",
    "email",
    "copywriting",
    "posthtml",
    "posthtml-plugin"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@vitest/coverage-v8": "^3.0.3",
    "posthtml": "^0.16.6",
    "unbuild": "^2.0.0",
    "vitest": "^3.0.2"
  }
}
